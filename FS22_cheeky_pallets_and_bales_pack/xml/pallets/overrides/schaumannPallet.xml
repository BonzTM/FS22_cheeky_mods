<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>$l10n_fillType_mineralFeed</name>
        <image>$data/objects/pallets/schaumann/store_schaumannPallet.png</image>
        <specs>
            <weight ignore="true"/>
        </specs>
        <functions>
            <function>$l10n_function_mineralFeedPallet</function>
        </functions>
        <storePacks>
            <storePack>STARTER_FORAGE</storePack>
        </storePacks>
        <price>1000</price>
        <category>pallets</category>
        <brand>SCHAUMANN</brand>
        <showInStore>true</showInStore>
        <canBeSold>false</canBeSold>
        <allowLeasing>false</allowLeasing>
        <financeCategory>OTHER</financeCategory>
        <shopHeight>1.5</shopHeight>
        <vertexBufferMemoryUsage>129024</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>20224</indexBufferMemoryUsage>
        <textureMemoryUsage>1638400</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>

        <storeIconRendering>
            <settings cameraXRot="-15" cameraYRot="35" />
        </storeIconRendering>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>$data/objects/pallets/schaumann/schaumannPallet.i3d</filename>
        <size width="1.4" length="1" height="0.9" />
        <canBeReset>false</canBeReset>
        <components maxMass="850">
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="60"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <animations>
        <animation name="fillAnimation">
            <part node="contentCollision" startTime="0.000" endTime="1" startScale="1 0.05 1" endScale="1 1 1" />
            <part node="mineralFeedBags" startTime="0.0" endTime="1.0" shaderParameter="hideByIndex" shaderStartValues="41.01 0 0 0" shaderEndValues="-0.01 0 0 0"/>
        </animation>
    </animations>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="MINERAL_FEED" startFillType="MINERAL_FEED" capacity="1050" startFillLevel="1050" ignoreFillLimit="true">
                        <fillLevelAnimation name="fillAnimation" resetOnEmpty="true" />
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="100" fillUnitIndex="1" canStartDischargeAutomatically="true" />
    </dischargeable>

    <fillTriggerVehicle triggerNode="fillTrigger" fillUnitIndex="1" litersPerSecond="15"/>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="6" additionalMountDistance="0.75" jointTransY="0.11" jointLimitToRotY="true"/>

    <tensionBeltObject>
        <meshNodes>
            <meshNode node="contentCollision"/>
        </meshNodes>
    </tensionBeltObject>

    <i3dMappings>
        <i3dMapping id="schaumannPallet_component1" node="0>" />
        <i3dMapping id="pallet_vis" node="0>0" />
        <i3dMapping id="dynamicMountTrigger" node="0>1" />
        <i3dMapping id="fillTrigger" node="0>2" />
        <i3dMapping id="dischargeNode" node="0>3" />
        <i3dMapping id="mineralFeedBags" node="0>5" />
        <i3dMapping id="contentCollision" node="0>6" />
    </i3dMappings>
</vehicle>
