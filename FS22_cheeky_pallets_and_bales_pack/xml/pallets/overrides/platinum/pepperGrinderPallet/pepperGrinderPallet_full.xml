<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../bin/shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>$l10n_storeItem_pepperGrinderPallet</name>
        <image>$data/store/store_empty.png</image>
        <category>pallets</category>
        <brand>LIZARD</brand>
        <showInStore>false</showInStore>
        <canBeSold>false</canBeSold>
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>xml/pallets/overrides/pepperGrinderPallet/pepperGrinderPallet.i3d</filename>
        <size width="1.3" length="0.9" height="1.0" yRotation="0" />
        <canBeReset>false</canBeReset>
        <components maxMass="300">
            <component centerOfMass="0 0.2 0" solverIterationCount="10" mass="600"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_pieces" fillTypes="PEPPERGRINDER" capacity="1000" ignoreFillLimit="true"/>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="500" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <pallet fillUnitIndex="1" node="pepperGrinderPallet_vis">
        <content>
            <object node="grinderBox01" tensionBeltNode="grinderBox01Tension"/>
            <object node="grinderBox02" tensionBeltNode="grinderBox02Tension"/>
            <object node="grinderBox03" tensionBeltNode="grinderBox03Tension"/>
            <object node="grinderBox04" tensionBeltNode="grinderBox04Tension"/>
            <object node="grinderBox05" tensionBeltNode="grinderBox05Tension"/>
            <object node="grinderBox06" tensionBeltNode="grinderBox06Tension"/>
            <object node="grinderBox07" tensionBeltNode="grinderBox07Tension"/>
            <object node="grinderBox08" tensionBeltNode="grinderBox08Tension"/>
        </content>
        <sounds>
            <unload template="palletsFillWood" pitchScale="1" volumeScale="1.7" supportsReverb="false"/>
        </sounds>
    </pallet>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="0.984" jointTransY="0.106" jointLimitToRotY="true"/>

    <i3dMappings>
        <i3dMapping id="pepperGrinderPallet_main_component1" node="0>" />
        <i3dMapping id="pepperGrinderPallet_vis" node="0>0" />
        <i3dMapping id="grinderBox01" node="0>0|0|0" />
        <i3dMapping id="grinderBox01Tension" node="0>0|0|0|0" />
        <i3dMapping id="grinderBox02" node="0>0|0|1" />
        <i3dMapping id="grinderBox02Tension" node="0>0|0|1|0" />
        <i3dMapping id="grinderBox03" node="0>0|0|2" />
        <i3dMapping id="grinderBox03Tension" node="0>0|0|2|0" />
        <i3dMapping id="grinderBox04" node="0>0|0|3" />
        <i3dMapping id="grinderBox04Tension" node="0>0|0|3|0" />
        <i3dMapping id="grinderBox05" node="0>0|0|4" />
        <i3dMapping id="grinderBox05Tension" node="0>0|0|4|0" />
        <i3dMapping id="grinderBox06" node="0>0|0|5" />
        <i3dMapping id="grinderBox06Tension" node="0>0|0|5|0" />
        <i3dMapping id="grinderBox07" node="0>0|0|6" />
        <i3dMapping id="grinderBox07Tension" node="0>0|0|6|0" />
        <i3dMapping id="grinderBox08" node="0>0|0|7" />
        <i3dMapping id="grinderBox08Tension" node="0>0|0|7|0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|1" />
        <i3dMapping id="dischargeNode" node="0>0|2" />
    </i3dMappings>
</vehicle>
