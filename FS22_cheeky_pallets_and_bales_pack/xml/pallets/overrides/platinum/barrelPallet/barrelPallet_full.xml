<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../bin/shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>$l10n_storeItem_barrelPallet</name>
        <image>$data/store/store_empty.png</image>
        <category>pallets</category>
        <brand>LIZARD</brand>
        <showInStore>false</showInStore>
        <canBeSold>false</canBeSold>
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>xml/pallets/overrides/barrelPallet/barrelPallet.i3d</filename>
        <size width="1.7" length="1.2" height="1.0" lengthOffset="0" />
        <canBeReset>false</canBeReset>
        <components maxMass="600">
            <component centerOfMass="0 0.2 0" solverIterationCount="10" mass="600"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_pieces" fillTypes="BARREL" capacity="2000" ignoreFillLimit="true"/>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="500" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <pallet fillUnitIndex="1" node="barrelPallet_vis">
        <content>
            <object node="barrel01" tensionBeltNode="barrel01Tension"/>
            <object node="barrel02" tensionBeltNode="barrel02Tension"/>
            <object node="barrel03" tensionBeltNode="barrel03Tension"/>
            <object node="barrel04" tensionBeltNode="barrel04Tension"/>
        </content>
        <sounds>
            <unload template="palletsFillWood" pitchScale="0.7" volumeScale="2.5" supportsReverb="false"/>
        </sounds>
    </pallet>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="1" jointTransY="0.106" jointLimitToRotY="true"/>

    <i3dMappings>
        <i3dMapping id="barrelPallet_vis" node="0>0" />
        <i3dMapping id="barrel01" node="0>0|0|0" />
        <i3dMapping id="barrel01Tension" node="0>0|0|0|1" />
        <i3dMapping id="barrel02" node="0>0|0|1" />
        <i3dMapping id="barrel02Tension" node="0>0|0|1|0" />
        <i3dMapping id="barrel03" node="0>0|0|2" />
        <i3dMapping id="barrel03Tension" node="0>0|0|2|0" />
        <i3dMapping id="barrel04" node="0>0|0|3" />
        <i3dMapping id="barrel04Tension" node="0>0|0|3|0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|1" />
        <i3dMapping id="dischargeNode" node="0>0|2" />
    </i3dMappings>
</vehicle>
