<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../bin/shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>$l10n_storeItem_bowlsPallet</name>
        <image>$data/store/store_empty.png</image>
        <category>pallets</category>
        <brand>LIZARD</brand>
        <showInStore>false</showInStore>
        <canBeSold>false</canBeSold>
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>xml/pallets/overrides/bowlsPallet/bowlsPallet.i3d</filename>
        <size width="1.3" length="0.9" height="1.0" lengthOffset="0" />
        <canBeReset>false</canBeReset>
        <components maxMass="600">
            <component centerOfMass="0 0.2 0" solverIterationCount="10" mass="600"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_pieces" fillTypes="BOWL" capacity="1000" ignoreFillLimit="true"/>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="500" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <pallet fillUnitIndex="1" node="bowlPallet_vis">
        <content>
            <object node="bowl01" tensionBeltNode="bowl01Tension"/>
            <object node="bowl02" tensionBeltNode="bowl02Tension"/>
            <object node="bowl03" tensionBeltNode="bowl03Tension"/>
            <object node="bowl04" tensionBeltNode="bowl04Tension"/>
            <object node="bowl05" tensionBeltNode="bowl05Tension"/>
            <object node="bowl06" tensionBeltNode="bowl06Tension"/>
            <object node="bowl07" tensionBeltNode="bowl07Tension"/>
            <object node="bowl08" tensionBeltNode="bowl08Tension"/>
        </content>
        <sounds>
            <unload template="palletsFillPaper" pitchScale="1" volumeScale="1.1" supportsReverb="false"/>
        </sounds>
    </pallet>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="0.945" jointTransY="0.106" jointLimitToRotY="true"/>

    <i3dMappings>
        <i3dMapping id="bowlPallet_main_component1" node="0>" />
        <i3dMapping id="bowlPallet_vis" node="0>0" />
        <i3dMapping id="bowl01" node="0>0|0|0" />
        <i3dMapping id="bowl01Tension" node="0>0|0|0|0" />
        <i3dMapping id="bowl02" node="0>0|0|1" />
        <i3dMapping id="bowl02Tension" node="0>0|0|1|0" />
        <i3dMapping id="bowl03" node="0>0|0|2" />
        <i3dMapping id="bowl03Tension" node="0>0|0|2|0" />
        <i3dMapping id="bowl04" node="0>0|0|3" />
        <i3dMapping id="bowl04Tension" node="0>0|0|3|0" />
        <i3dMapping id="bowl05" node="0>0|0|4" />
        <i3dMapping id="bowl05Tension" node="0>0|0|4|0" />
        <i3dMapping id="bowl06" node="0>0|0|5" />
        <i3dMapping id="bowl06Tension" node="0>0|0|5|0" />
        <i3dMapping id="bowl07" node="0>0|0|6" />
        <i3dMapping id="bowl07Tension" node="0>0|0|6|0" />
        <i3dMapping id="bowl08" node="0>0|0|7" />
        <i3dMapping id="bowl08Tension" node="0>0|0|7|0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|1" />
        <i3dMapping id="dischargeNode" node="0>0|2" />
    </i3dMappings>
</vehicle>
