<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <storeData>
        <name>$l10n_fillType_wool</name>
        <image>$data/store/store_empty.png</image>
        <category>pallets</category>
        <brand>LIZARD</brand>
        <showInStore>false</showInStore>
        <canBeSold>false</canBeSold>
        <financeCategory>OTHER</financeCategory>
        <vertexBufferMemoryUsage>53248</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>9728</indexBufferMemoryUsage>
        <textureMemoryUsage>1245184</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>$data/objects/pallets/woolPallet/woolPallet.i3d</filename>
        <size width="1.4" length="1" height="1.3" />
        <canBeReset>false</canBeReset>
        <components>
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="480"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true" removeVehicleDelay="0.35">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="WOOL" capacity="1000"/>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="1000" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <pallet fillUnitIndex="1" node="pallet_vis">
        <content>
            <object node="woolBag01" tensionBeltNode="woolBag01Tension"/>
            <object node="woolBag02" tensionBeltNode="woolBag02Tension"/>
            <object node="woolBag03" tensionBeltNode="woolBag03Tension"/>
            <object node="woolBag04" tensionBeltNode="woolBag04Tension"/>
        </content>

        <sounds>
            <unload template="palletsFillBag" pitchScale="0.7" />
        </sounds>
    </pallet>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="1.2" jointTransY="0.11" jointLimitToRotY="true"/>

    <i3dMappings>
        <i3dMapping id="woolPallet_component1" node="0>" />
        <i3dMapping id="pallet_vis" node="0>0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|0" />
        <i3dMapping id="dischargeNode" node="0>0|1" />
        <i3dMapping id="woolBag01" node="0>0|2|0" />
        <i3dMapping id="woolBag01Tension" node="0>0|2|0|0" />
        <i3dMapping id="woolBag02" node="0>0|2|1" />
        <i3dMapping id="woolBag02Tension" node="0>0|2|1|0" />
        <i3dMapping id="woolBag03" node="0>0|2|2" />
        <i3dMapping id="woolBag03Tension" node="0>0|2|2|0" />
        <i3dMapping id="woolBag04" node="0>0|2|3" />
        <i3dMapping id="woolBag04Tension" node="0>0|2|3|0" />
    </i3dMappings>
</vehicle>
