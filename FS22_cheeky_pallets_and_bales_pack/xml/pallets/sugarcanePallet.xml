<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <storeData>
        <name>$l10n_fillType_sugarCane</name>
        <functions>
            <function>$l10n_function_fillablePalletSugarCane</function>
        </functions>
        <specs>
            <capacity>2000</capacity>
            <fillTypes>sugarCane</fillTypes>
            <combination xmlFilename="$data/vehicles/gessner/singleRow/singleRow.xml"/>
            <combination xmlFilename="$data/vehicles/gessner/twoRow/twoRow.xml"/>
            <weight ignore="true"/>
        </specs>
        <image>$data/objects/pallets/palletSugarCane/store_palletSugarCane.png</image>
        <price>720</price>
        <allowLeasing>false</allowLeasing>
        <canBeSold>false</canBeSold>
		<showInStore>false</showInStore>
        <rotation>0</rotation>
        <shopHeight>1.5</shopHeight>
        <brand>LIZARD</brand>
        <category>pallets</category>
        <financeCategory>PURCHASE_SEEDS</financeCategory>
        <vertexBufferMemoryUsage>44032</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>6400</indexBufferMemoryUsage>
        <textureMemoryUsage>1245184</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>

        <storeIconRendering>
            <settings cameraXRot="-15" cameraYRot="35" />
        </storeIconRendering>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>$data/objects/pallets/fillablePallet/fillablePallet.i3d</filename>
        <size width="1.6" length="1.2" height="1.1" />
        <canBeReset>false</canBeReset>
        <input allowed="false"/>
        <components maxMass="850">
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="100"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="sugarCane" capacity="2000" updateMass="false" startFillType="sugarCane" startFillLevel="2000" ignoreFillLimit="true">
                        <exactFillRootNode node="exactFillRootNode" />
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <fillVolume>
        <fillVolumeConfigurations>
            <fillVolumeConfiguration>
                <volumes>
                    <volume node="fillVolume" maxAllowedHeapAngle="0" fillUnitIndex="1" />
                </volumes>
            </fillVolumeConfiguration>
        </fillVolumeConfigurations>
    </fillVolume>

    <fillTriggerVehicle triggerNode="fillTrigger" fillUnitIndex="1" litersPerSecond="200"/>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="99999" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" >
            <dischargeSound template="sugarcaneFill" overwriteSharedSound="true"/>
        </dischargeNode>
    </dischargeable>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="0.5" jointTransY="0.11" jointLimitToRotY="true"/>

    <tensionBeltObject>
        <meshNodes>
            <meshNode node="pallet_vis"/>
            <meshNode node="fillablePallet_vis"/>
        </meshNodes>
    </tensionBeltObject>

    <i3dMappings>
        <i3dMapping id="fillablePallet_component1" node="0>" />
        <i3dMapping id="pallet_vis" node="0>0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|0" />
        <i3dMapping id="dischargeNode" node="0>0|1" />
        <i3dMapping id="exactFillRootNode" node="0>0|2|0" />
        <i3dMapping id="fillTrigger" node="0>0|2|1" />
        <i3dMapping id="fillVolume" node="0>0|2|2" />
        <i3dMapping id="fillablePallet_vis" node="0>0|3" />
    </i3dMappings>
</vehicle>
