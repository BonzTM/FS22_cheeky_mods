            <attach template="ATTACH_01" />
            <hydraulic template="defaultHydraulicSound" />
        </sounds>
    </attacherJoints>
    
    <cylindered>
        <sounds>
            <hydraulic template="defaultHydraulicSound" />
        </sounds>
    </cylindered>

    <drivable>
        <sounds>
            <waterSplash template="WATER_SPLASH_01" />
        </sounds>
    </drivable>
    
    

    <honk>
        <sound template="hornDefault" pitchScale="0.85" linkNode="h21D_front_component1" />
    </honk>
